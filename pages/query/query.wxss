.section {
    background-color: #f1f1f1;
}

.querylist {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 40rem;
}

.queryitem {
    background: #fff;
    width: 90%;
    margin: 4% 0 0 0;
    padding: 0 0.5rem;
    display: flex;
    border-radius: 0.5rem;
    flex-direction: column;
}

.queryitem:nth-last-of-type(1) {
    margin: 4% 0 4% 0;
}

.content {
    display: flex;
    align-items: flex-start;
    font-size: 0.8rem;
    line-height: 1.2rem;
    padding: 0.5rem 0;
}

.title {
    display: flex;
    align-items: flex-start;
    color: #e50026;
    line-height: 1.5rem;
    font-size: 0.9rem;
    padding: 0.5rem 0;
    border-bottom: 1px solid #eaeaea;
}

.title text:nth-of-type(1) {
    margin-right: 1em;
}

.title text:nth-of-type(2) {
    flex: 1;
}

.content text:nth-of-type(1) {
    margin-right: 1em;
}

.content text:nth-of-type(2) {
    flex: 1;
}