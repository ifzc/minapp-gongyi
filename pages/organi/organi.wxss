@import "../../templates/organis/organis-tpl.wxss";
.organi-container{
    background-color:#fff;
}

.organi-header-box{
    height:80rpx;
    display:flex;
    justify-content:space-between;
    background-color:#fff;
    z-index:2099;
}
.organi-hr{
    background-color:#f1f1f1;
    height:15rpx;
}
.tab-item{
    flex:1;
    color:#333;
    font-size:28rpx;
    display:flex;
    align-items:center;
    justify-content:center;
    margin-left:10rpx;
    border-right:1rpx solid #f1f1f1;
    z-index:2099;
}
.organi-header-search image {
    width:41rpx;
    height:42rpx;
    margin-left:50rpx;
}


.selected{
    /*color: #AB956D;*/
    color:#e50026;
    /*border-bottom: 2px solid #AB956D;*/
    border-bottom: 2px solid #e50026;
}

.commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.7;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
  }
  
  .commodity_attr_box {
    width: 100%;
    height:294rpx;
    overflow: hidden;
    position: fixed;
    top:0rpx;
    left:0rpx;
    z-index: 2000;
    background: #fff;
    padding-top: 20rpx;
  }

  .commodity_attr_box_content{
    padding:10rpx;
    padding-top:100rpx;
    color:#000;
    font-size:28rpx;
  }
  .commodity_attr_boxs_item{
    margin-top:10rpx;
    margin-left:20rpx;
    height:50rpx;
    line-height:50rpx;
    border-bottom:1rpx solid #f9f9f9;
    display:flex;
    justify-content:space-between;
  }
  .active{
    background:url(https://cdn.it120.cc/images/weappshop/addr-active.png) no-repeat left center;
    background-size:28rpx auto;
  }
  .item-icon{
    width:45rpx;
    height:45rpx;
  }
