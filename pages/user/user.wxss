page{
    background-color:#f1f1f1;
}
.user-container{
    background-color:#f1f1f1;
    font-size:24rpx;
    color:#333;
}
.userbox {
   overflow: hidden;
   display: flex;
   flex-direction: column;
   width: 100%;
   height: 375rpx;
   align-items: center;
   justify-content: center;
   background-image: url(http://love.imtudou.cn/img/my-banner-bg.jpg);
}
.userbox .userinfo {}
.userinfo-avatar{
    width:120rpx;
    height:120rpx;
    border-radius:50%;
    margin:20rpx 0;
    background-color:#479de6;
    border:5rpx solid #eee;
    z-index:199;
}

.userbox .userinfo-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.userbox .userinfo-text .userinfo-nickname {
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
}


.nickName{
    z-index:99;
    font-size:24rpx;
    color:#333;
}

.img-bg{
    width:100%;
    height:100%;
}

.user-header{
    display:flex;
    width:86%;
    background:#fff;
    border-radius:20rpx;
    justify-content:space-between;
    height:90rpx;
    margin-bottom:20rpx;
    padding:3%;
    margin-top:-65rpx;
    margin-left:4%;
}
.user-header-left{
    border-right:1rpx solid #f1f1f1;
    width:50%;
}
.user-header-right {
    width:50%;
}
.user-menu{
    background:#fff;
    border-radius:20rpx;
    width:91%;
    margin-bottom:20rpx;
    margin-left:4%;
}
.user-menu-item{
    width:100%;
    display:flex;
    justify-content:space-between;
    height:70rpx;
    border-bottom:1rpx solid #f1f1f1;
    line-height:70rpx;
    margin-left:4%;
}
.item-icon{
    height:25rpx;
    width:25rpx;
}
.item-td{
    height:25rpx;
    width:25rpx;
}
.item-td image {
    width:100%;
    height:100%;
}
.item-icon image{
    width:100%;
    height:100%;
}
.user-code{
    display:flex;
    width:86%;
    padding:3%;
    background:#fff;
    border-radius:20rpx;
    flex-direction:row;
    height:90rpx;
    justify-content: space-between;
    margin-bottom:30rpx;
    margin-left:4%;
}
.user-footer{
    width:86%;
    padding:3%;
    margin-left:4%;
    text-align:center;
}
.menu-item-left {
    margin-left:10rpx;
    flex:5;
}
.no-border{
    border-bottom:none;
}
.user-code-text{
    margin-top:10rpx;
    font-size:28rpx;
}
.code-img{
    display:block;
    float:left;
    margin-right:30rpx;
    width:210rpx;
    height:210rpx;
}
.text-color{
    color:#e50026;
}
.code-btn{
    width:180rpx;
    height:60rpx;
    border-radius:30rpx;
    background-color:#1dee5d;
    margin-top:20rpx;
    line-height:60rpx;
    text-align:center;
    font-size:24rpx;
    color:#fff;
}
.user-text-title{
    font-size:26rpx;
}
.user-text-desc {
    font-size:18rpx;
}
.user-header text{
    display:block;
    text-align:center;
}
.header-left-nums{
    color:#479de6;
    font-size:28rpx;
    font-weight:bold;
}
.user-code-btn{
    padding: 0 !important;
    border:none !important;
    margin-right:0rpx;
}
.header-right-nums{
    color:#e50026;
    font-size:28rpx;
    font-weight:bold;
}
