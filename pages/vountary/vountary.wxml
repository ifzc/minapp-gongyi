<view class="section">
    <view class="flex-wrp">
        <view class="flex-item">
            <text>
                <text>真实姓名</text>
                <text class="tred">*</text>
            </text>
            <input type="text" placeholder="请输入真实姓名" maxlength='6' value="{{reginfo.name}}" />
        </view>
        <view class="flex-item">
            <text>
                <text>手机号码</text>
                <text class="tred">*</text>
            </text>
            <input type="text" placeholder="请输入手机号码" maxlength='11' value="{{reginfo.mobile}}" />
        </view>
        <view class="flex-item">
            <text>
                <text>手机验证码</text>
                <text class="tred">*</text>
            </text>
            <input type="text" placeholder="请输入验证码" maxlength='6' value="{{reginfo.sendcode}}" />
            <button bind:tap="getcode" disabled="{{disabled}}" class="getcode" type="primary">
                {{getcodetext}}
            </button>
        </view>
        <view class="flex-item">
            <text>
                <text>身份证号码</text>
                <text class="tred">*</text>
            </text>
            <input type="text" placeholder="请输入身份证号码" maxlength='18' value="{{reginfo.identitycard}}" />
        </view>
        <view class="flex-item">
            <text>
                <text>所属志愿队</text>
                <text class="tred">*</text>
            </text>
            <picker bindchange="defaultvolunteerChange" value="{{reginfo.defaultvolunteer}}" range="{{defaultvolunteerList}}">
                <view class="picker">{{defaultvolunteerList[reginfo.defaultvolunteer]}}</view>
            </picker>
        </view>
    </view>
    <view class="spanview"></view>
    <view class="flex-wrp">
        <view class="flex-item">
            <text>
                <text>所属地区</text>
                <text class="tred">*</text>
            </text>
            <picker bindchange="dependencyChange" value="{{reginfo.dependency}}" range="{{dependencyList}}">
                <view class="picker">{{dependencyList[reginfo.dependency]}}</view>
            </picker>
        </view>
        <view class="flex-item">
            <textarea placeholder="所属地详细地址" value="{{reginfo.dencyaddress}}" />
        </view>
    </view>
    <view class="spanview"></view>
    <view class="flex-wrp">
        <view class="flex-item">
            <text>
                <text>居住地区</text>
                <text class="tred">*</text>
            </text>
            <picker bindchange="dwellingplaceChange" value="{{reginfo.dwellingplace}}" range="{{dwellingplaceList}}">
                <view class="picker">{{dwellingplaceList[reginfo.dwellingplace]}}</view>
            </picker>
        </view>
        <view class="flex-item">
            <textarea placeholder="所住地详细地址" value="{{reginfo.placeaddress}}" />
        </view>
    </view>
    <button loading="{{loading}}" bind:tap="subform" class="subbtn" type="primary">保存</button>
</view>