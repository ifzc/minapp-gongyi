.pic-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 8rem;
}

.pic-box-img {
    width: 6.5rem;
    height: 6.5rem;
    border-radius: 50%;
    border: 1px solid #ddd
}

.del-info {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: 2rem;
    line-height: 2rem;
    border-bottom: 1px solid #ddd
}


.icon-xy {
    width: 25rpx;
    height: 25rpx;
}


.del-info-key {
    font-size: 28rpx;
    color: #999;
}

.del-info-value {
    font-size: 28rpx;
    color: #000;
    margin-right: 60rpx;
}

.del-info-value:nth-last-of-type(1) {
    margin-right: 0rem;
}

.del-content {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: 28rpx;

    /* border-bottom: 1px solid #ddd */
}

.del-content-value {
    font-size: 28rpx;
    color: #000;
}

.spanview {
    height: 15rpx;
    background-color: #f1f1f1;
}

.dz-box {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 20rpx;
    border-bottom: 1px solid #ddd;
    font-size: 28rpx;
}

.col-blue {
    color: #218ccd;
    font-size: 32rpx;
}

.dz-info {
    display: flex;
    flex-direction: row;
    padding: 20rpx;
    border-bottom: 1px solid #ddd;
}

.dz-info-img {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 80prx;
}

.dz-info-img image {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}

.list-img {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 75rpx;
    height: 75rpx;
    margin-left: 30rpx;
}

.list-img image {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}

.p-list {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
}

.p-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    border-bottom: 1px solid #ddd;
    padding: 14rpx;
    font-size: 30rpx;
}

.list-state {
    display: flex;
    flex-direction: row;
    align-items: center;

    color: #e50026;
}

.list-state image {
    width: 22rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.p-item view:nth-of-type(2) {
    width: 40%;
}

.p-item view:nth-last-of-type(1) {
    width: 8%;
}

.btns {
    display: inline-block;
    height: 80rpx;
    line-height: 80rpx;
    width: 90%;
    border-radius: 3rem;
    vertical-align: middle;
    font-size: 24rpx;
    margin: 30rpx 30rpx;
    text-align: center;
    background: #e50026;
    color: #fff;
}