.activities-box{
    width:100%;
}
.activities-box .activities-item{
    display:flex;
    justify-content:center;
    flex-direction:row;
    height:218rpx;
    align-items:center;
    padding:8rpx 8rpx 8rpx 20rpx;
    border-bottom:1rpx solid #f1f1f1;
}
.activities-box .activities-item .activities-item-img{
    width:30%;
    border-radius:6rpx;
    height:186rpx;
    
}
.activities-box .activities-item .activities-item-right{
    font-size:24rpx;
    color:#888;
    width:70%;
    margin-left:20rpx;
    height:186rpx;
}

.activities-item .activities-item-right .activities-item-title{
    font-size:36rpx;
    color:#333;
    flex-wrap:nowrap;
    
}
.activities-item-time{
    margin-top:6rpx;
}
.activities-item-address{
    margin-top:6rpx;
}
.activities-item-status{
    display:flex;
    justify-content:space-between;
    flex-wrap:nowrap;
    flex-direction:row;
    margin-top:6rpx;
}
.status_text{
    flex:1.5;
    color: #fff;
    background-color: #218ccd;
    font-size:36rpx;
    text-align: center;
}
.status_info{
    flex:3;
    text-align:center;
    background-color:#f6f6f6;
    color:#333;
    font-size:24rpx;
    line-height:56rpx;
}
.status_info text{
    color:#e50b26;
}
.status_imgs{
    flex:1.5;
    width:100%;
    height:100%;
}

.status_imgs image{
    width:35rpx;
    height:35rpx;
    margin-right:6rpx;
    border-radius:50%;
    display:inline-block;
}




.icon_time{
    width:25rpx;
    height:25rpx;
    display:inline-block;
}
.icon_time image{
    width:100%;
    height:100%;
}
.icon_address{
    width:25rpx;
    height:25rpx;
    display:inline-block;
    line-height:25rpx;
}
.icon_address image{
    width:100%;
    height:100%;
}


