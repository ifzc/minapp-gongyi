.timebox cover-image {
    width: 100%;
    height: 9rem;
    margin-top: -0.5rem;
}

.timetextbox {
    position: absolute;
    top: 0px;
    text-align: center;
    width: 100%;
}

.timetextbox view:nth-of-type(1) {
    font-size: 1.8rem;
    height: 4.8rem;
    line-height: 6.2rem;
    color: #fff;
}

.timetextbox view:nth-of-type(2) {
    font-size: 0.8rem;
    height: 0.8rem;
    line-height: 0.8rem;
    color: #fff;
}

.boxlist {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.boxitem {
    width: 90%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
    border-bottom: 1px solid #eaeaea;
    padding: 0.8rem 0.5rem;
}

.boxitem-left {
    display: flex;
    flex-direction: column;
}

.boxitem-left text:nth-of-type(1) {
    font-size: 0.8rem;
    height: 1rem;
    line-height: 1rem;
}

.boxitem-left text:nth-of-type(2) {
    font-size: 0.7rem;
    height: 0.8rem;
    line-height: 0.8rem;
    color: rgb(192, 192, 192);
}

.boxitem-right {
    font-size: 1rem;
    height: 1rem;
    line-height: 1rem;
    color: #e50026;
}