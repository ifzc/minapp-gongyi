<view class="container detail-container"  hidden="{{!loading}}">
  <view class="detail-header-box">
     <view class="detail-topic-img">
        <image src="{{activity.img}}" mode="aspectFill" bind:tap="preview"/>
     </view>
     <view class="detail-hr"></view>
     <view class="detail-infos">
       <view class="start-time">
         <view>
           开始时间:<text>{{activity.starttime}}</text>
         </view>
         <view class="detail-status" wx:if="{{activity.flowstate=='1'}}">
           未开始
         </view>
         <view class="detail-status" wx:if="{{activity.flowstate=='2'}}">
           进行中
         </view>
         <view class="detail-status" wx:if="{{activity.flowstate=='3'}}">
           已结束
         </view>
       </view>
       <view class="end-time">
         结束时间:<text>{{activity.endtime}}</text>
       </view>
       <view class="perpon">
         <view>
           报名人数:<text class="text-nums">30</text>/<text>80</text>
         </view>
         <view class="icon-dianz">
           <image src="../../images/dianzan-icon.png"/>
         </view>
       </view>
       <view class="detail-type">
         <view>
           所属类型:<text>其他</text>
         </view>
         <view class="icon-fenx" bind:tap="onShare">
           <image src="../../images/fengxiang-icon.png"/>
         </view>
       </view>
       <view class="detail-area">
          <view>
           所属区域:<text>浦东区</text>
          </view>
       </view>
       <view class="detail-address">
          <view>活动地点:<text>广东汕头市澄海区隆都镇上西村上</text></view>
       </view>
     </view>
     <view class="detail-desc">
        <text>{{activity.desc}}</text>
     </view>
  </view>
  <view class="detail-hr"></view>
  <view class="detail-main-box">
    <view class="detail-title">
      <view class="detail-title-left">联系信息</view>
      <view class="detail-title-right">
        
      </view>
    </view>
    <view class="detail-content">
       <image class="detail-content-img" src="../../images/photo-pic.jpg"/>
       <view class="detail-phone">
          <text>发起人:周洁</text>
          <text>手机号:15826775622</text>
       </view>
       <view class="detail-code">
          <image src="../../images/ichengzhi-ewm.jpg"/>
       </view>
    </view>
  </view>
  <view class="detail-hr"></view>
  <view class="detail-bottom-box">
   <view class="detail-title">
      <view class="detail-title-left">报名列表</view>
      <view class="detail-title-right">
        已报名:<text>30人</text>
      </view>
    </view>
   <view class="detail-bottom-content">
     <block wx:for="{{activity.list}}" wx:key="index" wx:for-item="signup_item">
       <view class="signup_item">
          <view class="item-info">
            <view class="ingo-img">
              <image  src="{{signup_item.url}}" />
            </view>
            <view class="info-name">{{signup_item.name}}</view>
          </view>
          <view class="item-time">
            {{signup_item.add_date}}
          </view>
       </view>
     </block>
   </view>
  </view>
  <view class="detail-bottom-button" bind:tap="onrganizeTap">
    <view>我要报名</view>
  </view>
</view>
<loading hidden="{{loading}}">加载中...</loading>